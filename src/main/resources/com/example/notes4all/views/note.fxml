<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.web.HTMLEditor?>

<BorderPane prefHeight="600"
            prefWidth="900"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.notes4all.controller.noteController">

    <!-- =========================
         TOP TOOLBAR
         ========================= -->
    <top>
        <ToolBar style="-fx-background-color: cadetblue;">

            <Button text="Undo" onAction="#onUndoClick"/>
            <Button text="Redo" onAction="#onRedoClick"/>


            <Button text="New Note" onAction="#onNewNoteClick">
                <font>
                    <Font size="13"/>
                </font>
            </Button>

            <Label text=" Name:" textFill="WHITE"/>

            <TextField fx:id="noteNameField"
                       prefWidth="180"
                       promptText="Enter note name"/>

            <Button text="Save Note" onAction="#onSaveNoteClick">
                <font>
                    <Font size="13"/>
                </font>
            </Button>

        </ToolBar>
    </top>

    <!-- =========================
         LEFT SIDEBAR
         ========================= -->
    <left>
        <VBox spacing="5"
              prefWidth="220"
              style="-fx-background-color: lightblue;"
              BorderPane.alignment="CENTER">

            <Label text=" Saved Notes :" />

            <Line opacity="0.0"/>

            <ListView fx:id="noteListView"
                      onMouseClicked="#onListClick"
                      VBox.vgrow="ALWAYS"/>
        </VBox>
    </left>

    <!-- =========================
         CENTER CONTENT
         ========================= -->
    <center>
        <VBox spacing="5" VBox.vgrow="ALWAYS">

            <HTMLEditor fx:id="noteEditor"
                        VBox.vgrow="ALWAYS"/>


        </VBox>
    </center>

</BorderPane>


