<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400" prefWidth="700" style="-fx-background-color: cadetblue;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.notes4all.loginController">

    <VBox alignment="CENTER" layoutX="50.0" layoutY="35.0" prefHeight="231.0" prefWidth="300.0" spacing="10" AnchorPane.bottomAnchor="34.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="35.0">
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Notes4All Login" textFill="WHITE" />

        <TextField fx:id="emailField" maxWidth="200" promptText="Email" />

        <PasswordField fx:id="passwordField" maxWidth="200" promptText="Password" />

        <Button maxWidth="200" onAction="#onLoginButtonClick" text="Login" />

        <Button maxWidth="200" onAction="#onRegisterButtonClick" text="Register" />

        <Label style="-fx-font-size: 10px; -fx-text-fill: gray;" text="Use admin / 1234 to login" />
    </VBox>
</AnchorPane>
