      </Label>

        <TextField fx:id="emailField" maxWidth="200" promptText="Email" style="-fx-background-color: lightgrey;" />

        <PasswordField fx:id="passwordField" maxWidth="200" promptText="Password" style="-fx-background-color: lightgrey;" />

        <Button defaultButton="true" maxWidth="200" onAction="#handleLogin" style="-fx-background-color: grey; -fx-border-color: white;" text="Login" textFill="WHITE" />

        <Button maxWidth="200.0" onAction="#handleGoToRegister" style="-fx-background-color: grey; -fx-border-color: white;" text="Create an account" textFill="WHITE" />

    </VBox>
</AnchorPane>
