<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.notes4all.profileController"
            prefWidth="500" prefHeight="400">

    <top>
        <HBox alignment="CENTER" spacing="10" style="-fx-background-color: #2196F3; -fx-padding: 15;">
            <Label text="User Profile" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: white;"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="15" alignment="TOP_CENTER" style="-fx-padding: 30;">
            <Label text="Profile Information" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <GridPane hgap="10" vgap="15" alignment="CENTER">
                <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0"
                       style="-fx-font-weight: bold;"/>
                <Label fx:id="usernameLabel" text="" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="Full Name:" GridPane.columnIndex="0" GridPane.rowIndex="1"
                       style="-fx-font-weight: bold;"/>
                <TextField fx:id="fullNameField" promptText="Enter full name"
                           GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="200"/>

                <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="2"
                       style="-fx-font-weight: bold;"/>
                <TextField fx:id="emailField" promptText="Enter email"
                           GridPane.columnIndex="1" GridPane.rowIndex="2" prefWidth="200"/>

                <Label text="Bio:" GridPane.columnIndex="0" GridPane.rowIndex="3"
                       style="-fx-font-weight: bold;" GridPane.valignment="TOP"/>
                <TextArea fx:id="bioArea" promptText="Tell us about yourself..."
                          GridPane.columnIndex="1" GridPane.rowIndex="3"
                          prefWidth="200" prefHeight="80" wrapText="true"/>
            </GridPane>

            <HBox spacing="10" alignment="CENTER">
                <Button text="Save Changes" onAction="#onSaveProfileClick"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;"/>
                <Button text="Close" onAction="#onCloseClick"
                        style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
            </HBox>

            <Label fx:id="statusLabel" text="" style="-fx-text-fill: green; -fx-font-style: italic;"/>
        </VBox>
    </center>
</BorderPane>
