<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.GridPane?>
<BorderPane prefHeight="600.0" prefWidth="750.0" style="-fx-background-color: #fafafa;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.notes4all.controller.ProfileEditController">

    <!-- ========================= TOP BAR ========================= -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 20; -fx-border-width: 0 0 1 0; -fx-background-color: Cadetblue;">
         <Label prefHeight="46.0" prefWidth="170.0" text="Notes4All" textFill="WHITE">
            <font>
               <Font name="System Bold" size="35.0" />
            </font>
         </Label>
         <AnchorPane prefHeight="51.0" prefWidth="411.0" />

            <Button defaultButton="true" onAction="#handleBack" prefHeight="42.0" prefWidth="66.0" style="-fx-border-color: white; -fx-background-color: lightgrey;" text="â† Back" textFill="WHITE">
            <font>
               <Font name="System Bold" size="12.0" />
            </font>
            <HBox.margin>
               <Insets />
            </HBox.margin>
            <opaqueInsets>
               <Insets />
            </opaqueInsets></Button>
        </HBox>
    </top>

    <!-- ========================= MAIN CONTENT ========================= -->
    <center>
        <VBox alignment="CENTER" spacing="25"
              style="-fx-padding: 40; -fx-background-color: lightblue;">

            <!-- Title -->
            <Label text="Edit Profile" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="30"/>
                </font>
            </Label>

            <!-- Form -->
            <GridPane alignment="CENTER" hgap="15" vgap="15">

                <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="usernameField"
                           promptText="Username"
                           prefWidth="250"
                           GridPane.rowIndex="0"
                           GridPane.columnIndex="1"/>

                <Label text="Full Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="fullNameField"
                           promptText="Full Name"
                           prefWidth="250"
                           GridPane.rowIndex="1"
                           GridPane.columnIndex="1"/>

                <Label text="Bio:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextArea fx:id="bioField"
                          promptText="Bio"
                          prefWidth="250"
                          prefRowCount="4"
                          wrapText="true"
                          GridPane.rowIndex="2"
                          GridPane.columnIndex="1"/>

            </GridPane>

            <!-- Save button -->
            <Button text="Save Changes"
                    prefWidth="300"
                    onAction="#handleSave"
                    style="-fx-background-color: lightgrey;
                       -fx-border-color: grey;
                       -fx-text-fill: white;
                       -fx-font-size: 14px;
                       -fx-background-radius: 8;
                       -fx-padding: 10;"/>

        </VBox>
    </center>


</BorderPane>
