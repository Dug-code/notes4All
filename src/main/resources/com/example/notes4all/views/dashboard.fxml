<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.notes4all.controller.dashboardController">

    <!-- ================= SIDEBAR ================= -->
    <left>
        <VBox prefHeight="336.0" prefWidth="168.0" spacing="12" style="-fx-padding: 15; -fx-background-color: #f5f5f5;">

            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Notes4All" />

            <Separator />

            <Button maxWidth="Infinity" onAction="#openNotes" text="Notes" />

            <Button maxWidth="Infinity" onAction="#openProfile" text="Profile" />

<!--            <Button maxWidth="Infinity" onAction="#openFriends" text="Friends" />-->

<!--            <Button maxWidth="Infinity" onAction="#openAddFriend" text="Add Friend" />-->

            <Separator />

            <Button maxWidth="Infinity" onAction="#handleLogout" style="-fx-text-fill: red;" text="Logout" />

        </VBox>
    </left>

    <!-- ================= MAIN CONTENT ================= -->
    <center>
        <StackPane fx:id="contentPane" prefHeight="336.0" prefWidth="299.0" style="-fx-padding: 20;">
            <Label style="-fx-font-size: 16px;" text="Welcome to Notes4All!" />
        </StackPane>
    </center>

</BorderPane>
