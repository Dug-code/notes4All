<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400" prefWidth="700" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.notes4all.controller.noteController">

    <!-- MAIN APP TOOLBAR -->
    <top>
        <ToolBar style="-fx-background-color: cadetblue;">
            <Button onAction="#onNewNoteClick" prefHeight="21.0" prefWidth="77.0" text="New Note">
                <font>
                    <Font size="13.0" />
                </font></Button>

            <Label text="Name:" textFill="WHITE" />
            <TextField fx:id="noteNameField" prefWidth="150" promptText="Enter note name" />

            <Button onAction="#onSaveNoteClick" text="Save Note">
                <font>
                    <Font size="13.0" />
                </font></Button>
        </ToolBar>
    </top>

    <!-- SIDEBAR WITH SAVED NOTES -->
    <left>
        <VBox prefWidth="220" spacing="5" style="-fx-background-color: lightblue;">
            <Label prefHeight="28.0" prefWidth="85.0" text=" Saved Notes :" />
            <Line endX="183.2929229736328" endY="12.092878341674805" opacity="0.0" startX="-100.0" />
            <ListView fx:id="noteListView" onMouseClicked="#onListClick" prefHeight="436.0" prefWidth="283.0" />
        </VBox>
    </left>

    <!-- CENTER: NOTE TEXT AREA + ITS OWN TOOLBAR -->
    <center>
        <VBox spacing="5">

            <!-- NOTE-ONLY TOOLBAR -->
            <ToolBar prefHeight="43.0" prefWidth="617.0" style="-fx-background-color: lightblue;">
                <Label text="Text Color:" />
                <ColorPicker fx:id="textColorPicker" onAction="#onColorChange" />
            </ToolBar>

            <!-- TEXT AREA -->
            <TextArea fx:id="noteArea" prefHeight="309.0" prefWidth="430.0" promptText="Write your notes here..." style="-fx-background-color: blue;" wrapText="true" VBox.vgrow="ALWAYS" />
        </VBox>
    </center>

</BorderPane>