<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.notes4all.controller.DashboardController">

    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="80.0" prefWidth="805.0" spacing="20" style="-fx-padding: 15; -fx-background-color: #f8f8f8;">
            <Label fx:id="welcomeLabel" prefHeight="26.0" prefWidth="375.0" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

            <Pane prefHeight="26.0" prefWidth="150.0" HBox.hgrow="ALWAYS" /> <!-- Spacer -->

            <Button maxWidth="Infinity" onAction="#handleEditProfile" text="Edit Profile" />
            <Button maxWidth="Infinity" onAction="#handleLogout" text="Log Out" textFill="#e12929" />
        </HBox>
    </top>

    <!-- ========================= LEFT SIDEBAR (Friends) ========================= -->
    <left>
        <VBox spacing="10" style="-fx-padding: 20; -fx-background-color: #fafafa; -fx-border-color: #dddddd; -fx-border-width: 0 1 0 0;">

            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Friends">
            <font>
               <Font size="24.0" />
            </font></Label>

            <ListView fx:id="friendsListView" onMouseClicked="#handleFriendClick" prefHeight="400" prefWidth="180" />

            <HBox spacing="5">
                <TextField fx:id="addFriendField" promptText="Add username" HBox.hgrow="ALWAYS" />
                <Button onAction="#handleAddFriend" text="Add" />
            </HBox>

        </VBox>
    </left>

    <center>
        <VBox spacing="15">

            <!-- TITLE + NEW NOTE BUTTON -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="Your Notes" />
                <Region HBox.hgrow="ALWAYS" />
                <Button onAction="#handleNewNoteClick" text="New Note" />
            </HBox>

            <ListView fx:id="dashboardNotesList" onMouseClicked="#handleDashboardNoteClick" prefHeight="424.0" prefWidth="510.0" />
        </VBox>

    </center>

</BorderPane>
