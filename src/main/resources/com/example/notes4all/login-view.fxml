<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.notes4all.loginController"
            prefWidth="400" prefHeight="300">

    <VBox alignment="CENTER" spacing="10" AnchorPane.topAnchor="50.0"
          AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0"
          AnchorPane.bottomAnchor="50.0">
        <Label text="Notes4All Login" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

        <TextField fx:id="emailField" promptText="Email" maxWidth="200"/>

        <PasswordField fx:id="passwordField" promptText="Password" maxWidth="200"/>

        <Button text="Login" onAction="#onLoginButtonClick" maxWidth="200"/>

        <Label text="Use admin / 1234 to login" style="-fx-font-size: 10px; -fx-text-fill: gray;"/>
    </VBox>
</AnchorPane>
